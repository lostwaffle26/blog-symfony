{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
	<style>
		.images {
			border-radius: 4px;
			padding: 5px;
			width: 30vh;
		}
	</style>
	<div class="container">

		<div
			class="row">

			<!-- Blog Entries Column -->
			<div class="col-md-8">

				<h1 class="my-4">Derniers Articles</h1>
				{% for article in articles %}
					<!-- Blog Post -->
					<div class="card mb-4">
						<div class="card-body">
							<h2 class="card-title">{{ article.titre }}</h2>
							<p><img class="images" src="{{vich_uploader_asset(article, 'imageFile') }}" alt=" {{ article.titre }}"></p>
							<p class="card-text">{{article.content|raw }}</p>
							<a href="/blog" class="btn btn-primary">Voir plus</a>
							{% for categorie in article.categories %}
								<span class="badge bg-info text-dark">{{categorie.name}}</span>
							{% endfor %}}</p>
					</div>
					<div class="card-footer text-muted">
						Créé le
						{{article.createdAt|date('d/m/Y à h:i')}}
					</div>
				</div>
			{% endfor %}
			<!-- Pagination -->
			<ul class="pagination justify-content-center mb-4">
				<li class="page-item">
					<a class="page-link" href="#">&#8593; Remonter</a>
				</li>
			</ul>

		</div>

		<!-- Sidebar Widgets Column -->
		<div
			class="col-md-4">

			<!-- Search Widget -->
			<div class="card my-4">
				<h5 class="card-header">Rechercher</h5>
				<div class="card-body">
					<div class="input-group">
						<input type="text" class="form-control" placeholder="Search for...">
						<span class="input-group-append">
							<button class="btn btn-secondary" type="button">Go!</button>
						</span>
					</div>
				</div>
			</div>

			<!-- Categories Widget -->

			<div class="card my-4">
				<h5 class="card-header">Categories</h5>
				<div class="card-body">
					<div class="row">
						<div class="col-lg-6">
							<ul class="list-unstyled mb-0">
								<li>
									<a href="#">
										{% for article in articles %}
											{% for categorie in article.categories %}
												<span class=" text-dark">{{categorie.name}}</span>
											{% endfor %}}</p>
									{% endfor %}
								</li>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>

</div></div><!-- /.row --></div>{% endblock %}
